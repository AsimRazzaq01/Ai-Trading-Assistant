# -------------------------
# PostgreSQL Database
# -------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_trading
POSTGRES_HOST=ai_db
POSTGRES_PORT=5432

# Used internally by the backend (FastAPI + SQLAlchemy)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@ai_db:5432/ai_trading


# -------------------------
# Backend (FastAPI)
# -------------------------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend URL(s) allowed by CORS
ALLOWED_ORIGINS=http://localhost:3000

# JWT / Auth configuration
JWT_SECRET_KEY=please_change_me
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# HttpOnly Cookie configuration
COOKIE_NAME=access_token
COOKIE_SECURE=False      # True only for HTTPS production
COOKIE_SAMESITE=lax      # Use "none" for cross-domain setups


# -------------------------
# OAuth (Optional)
# -------------------------
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback


# -------------------------
# Frontend (Next.js)
# -------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000

# -------------------------
# Third-Party APIs
# -------------------------
FMP_API_KEY=YOUR_FMP_API_KEY_HERE
